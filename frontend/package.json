{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run build:wasm && vite",
    "dev:fast": "vite",
    "build": "npm run build:wasm && tsc && vite build",
    "build:wasm": "cd ../backend && ./scripts/build_wasm.sh",
    "build:wasm:watch": "cd ../backend && ./scripts/build_wasm.sh && fswatch -o src/ | xargs -n1 -I{} ./scripts/build_wasm.sh",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run type-check && npm run format:check",
    "check:fix": "npm run lint:fix && npm run format",
    "pre-commit": "npm run check",
    "preview": "vite preview",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "clean": "rm -rf dist node_modules/.vite && rm -f public/drawing_engine.*",
    "clean:all": "npm run clean && rm -rf node_modules",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "npm run lint && npm run type-check && npm run test",
    "test:windows": "vitest run --reporter=verbose",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@webgpu/types": "^0.1.64",
    "debug": "^4.4.1",
    "jest": "^30.0.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
